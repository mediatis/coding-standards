{
    "name": "mediatis/coding-standards",
    "description": "Mediatis - Coding Standards",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "keywords": [
        "coding standards",
        "php"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "bin": [
        "bin/mediatis-coding-standards-setup"
    ],
    "require": {
        "php": "^8.1",
        "composer/semver": "^3.4",
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.27",
        "phpstan/phpstan": "^1.12.x-dev",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^1.2.2",
        "symfony/yaml": "^5.3.6 || ^6.2.0"
    },
    "autoload": {
        "psr-4": {
            "Mediatis\\CodingStandards\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
